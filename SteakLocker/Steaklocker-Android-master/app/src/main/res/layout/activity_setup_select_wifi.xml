<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.steaklocker.steaklocker.SetupStartActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="50dp"
        android:paddingBottom="@dimen/activity_vertical_margin">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/setup_start"
        />

    <TextView
        android:text="Select WiFi"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="#FFFF7200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>


    <TextView
        android:text="Enter your WiFi credentials to connect the Steak Locker"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"/>

    <EditText
        android:id="@+id/ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Network Name"
        android:imeOptions="actionNext"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password If Required"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:singleLine="true"/>


    <Button android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="10dp"
        android:background="#ffff7200"
        android:layout_gravity="bottom"
        android:textColor="#ffffffff" />
</LinearLayout>
</ScrollView>