<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/__bu_legacy_mode"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:visibility="gone" >

    <CheckBox
        android:id="@+id/__bu_legacy_mode_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/__bu_padding"
        android:checked="false"
        android:text="@string/__bu_legacy_mode" />

    <TextView
        style="@style/BlinkUp.SelectableText"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:onClick="legacyModeLink"
        android:text="@string/__bu_legacy_mode_link"
        android:textSize="16sp" />

</RelativeLayout>